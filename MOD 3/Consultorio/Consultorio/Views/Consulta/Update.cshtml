@model Consulta

<h4> 
    Atualizar o paciente 
</h4>

<div class="row">
    <form class="col-md-4" asp-action="Update">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="dataHora" class="control-label"></label>
            <input asp-for="dataHora" class="form-control" />
            <span class="text-danger" asp-validation-for="dataHora"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group">
            <label asp-for="pacienteId" class="control-label"></label>
            <input asp-for="pacienteId" class="form-control" />
            <span class="text-danger" asp-validation-for="pacienteId"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Atualizar!" />
            <a class="btn btn-info" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>