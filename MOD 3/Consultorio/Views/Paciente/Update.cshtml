@model Paciente

<h4> 
    Atualizar o paciente 
</h4>

<div class="row">
    <form class="col-md-4" asp-action="Update">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Nascimento" class="control-label"></label>
            <input asp-for="Nascimento" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Atualizar!" />
            <a class="btn btn-info" asp-controller="Paciente" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>